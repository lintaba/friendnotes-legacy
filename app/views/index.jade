extends layouts/default

block content
    h1 Facebook friend comments
    p
      - if (!req.isAuthenticated())
          a(href="/auth/facebook", title="Login") Login
      - else
          a(href="/list", title="List") List
          a(href="/logout", title="Logout") Logout
    h2 for chrome
      ol
        li
            a(href="app.user.js") Download extension
        li navigate to about:extensions
        li drag'n'drop the downloaded extension to this panel
        li enjoy.

    h2 for firefox
      ol
        li
            a(href="https://addons.mozilla.org/en-US/firefox/addon/greasemonkey/") Download greasemonkey
        li
            a(href="app.user.js") Download the extension
        li enjoy.
    h2 for any other browser
      ol
        li well.. that's probably sucks

    footer
        p
            a(href="/privacy") Pricacy policy
        p
            a(href="/status") Status of service
        p
            a(href="/about") About
        p
            a(href="/bugs") Bugs
